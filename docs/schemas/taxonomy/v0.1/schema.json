{
  "$schema": "http://json-schema.org/schema#",
  "$id": "urn:x-adshares:taxonomy:0.1",
  "type": "object",
  "definitions": {
    "semanticVersion": {
      "$id": "#semver",
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
    },
    "num": {
      "$id": "#num",
      "type": "object",
      "required": [
        "key",
        "type"
      ],
      "properties": {
        "key": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "num"
          ]
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        }
      }
    },
    "simple": {
      "$id": "#simple",
      "type": "object",
      "required": [
        "key",
        "type"
      ],
      "properties": {
        "key": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "bool",
            "num",
            "input"
          ]
        }
      }
    },
    "dictionary": {
      "$id": "#dictionary",
      "type": "object",
      "required": [
        "key",
        "type",
        "values"
      ],
      "properties": {
        "key": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "dictionary"
          ]
        },
        "values": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "string"
              },
              "label": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "keyword": {
      "$id": "#keyword",
      "type": "object",
      "required": [
        "key"
      ],
      "properties": {
        "key": {
          "type": "string"
        },
        "label": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "version": {
      "$ref": "#semver"
    },
    "data": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#simple"
          },
          {
            "$ref": "#num"
          },
          {
            "$ref": "#dictionary"
          },
          {
            "$ref": "#keyword"
          }
        ]
      }
    }
  },
  "required": [
    "version",
    "data"
  ]
}
